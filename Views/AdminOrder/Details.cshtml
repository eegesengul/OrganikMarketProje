@model OrganikMarketProje.Models.Order

<h2>Sipariş Detayı (#@Model.Id)</h2>

<p><strong>Kullanıcı:</strong> @Model.UserName</p>
<p><strong>Tarih:</strong> @Model.OrderDate.ToString("dd.MM.yyyy HH:mm")</p>
<p><strong>Durum:</strong> @Model.Status</p>
<p><strong>Adres:</strong> @Model.DeliveryAddress</p>
<p><strong>Telefon:</strong> @Model.PhoneNumber</p>
@if (!string.IsNullOrEmpty(Model.Note))
{
        <p><strong>Not:</strong> @Model.Note</p>
}

<table class="table">
    <thead>
        <tr>
            <th>Ürün</th>
            <th>Birim Fiyat</th>
            <th>Adet</th>
            <th>Toplam</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderItems)
        {
                <tr>
                    <td>@item.Product?.Name</td>
                    <td>@item.UnitPrice ₺</td>
                    <td>@item.Quantity</td>
                    <td>@(item.UnitPrice * item.Quantity) ₺</td>
                </tr>
        }
    </tbody>
</table>

<p><strong>Genel Toplam:</strong> @Model.OrderItems.Sum(i => i.UnitPrice * i.Quantity) ₺</p>

<a asp-action="Index" class="btn btn-secondary mt-3">← Geri Dön</a>
