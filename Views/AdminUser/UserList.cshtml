@model IEnumerable<OrganikMarketProje.Models.UserListViewModel>

<h2>Kullanıcı Listesi</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Kullanıcı Adı</th>
            <th>Email</th>
            <th>Roller</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
                <tr>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>@user.Roles</td>
                    <td>
                        <a asp-action="ChangeRole" asp-route-id="@user.Id" class="btn btn-sm btn-primary">
                            Rol Değiştir
                        </a>
                        <a asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-sm btn-danger" 
                           onclick="return confirm('Bu kullanıcıyı silmek istediğinize emin misiniz?');">
                            Sil
                        </a>
                    </td>
                </tr>
        }
    </tbody>
</table>
