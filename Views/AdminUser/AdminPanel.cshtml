@{
    ViewData["Title"] = "Admin Paneli";
}

<section class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">

            <div class="card shadow rounded-4 border-0">
                <div class="card-body p-4 bg-light">

                    <h2 class="text-danger text-center mb-4">⚙️ Admin Paneli</h2>

                    <nav>
                        <ul class="nav flex-column gap-2">
                            <li class="nav-item">
                                <a class="btn btn-outline-primary w-100 text-start" asp-controller="AdminUser" asp-action="UserList">
                                    👥 Kullanıcı Yönetimi
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-outline-warning w-100 text-start" asp-controller="AdminReport" asp-action="Index">
                                    📊 Raporlar
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-outline-warning w-100 text-start" asp-controller="AdminReport" asp-action="DateRangeReport">
                                    🗓️ Tarih Aralığı Raporu
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-outline-danger w-100 text-start" asp-controller="AdminOrder" asp-action="Index">
                                    📦 Sipariş Yönetimi
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-outline-secondary w-100 text-start" asp-controller="Comment" asp-action="Index">
                                    💬 Yorum Yönetimi
                                </a>
                            </li>
                        </ul>
                    </nav>

                </div>
            </div>

        </div>
    </div>
</section>
