@model OrganikMarketProje.Models.Product

<section class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-xl-7">

            <div class="card shadow rounded-4 border-0">
                <div class="card-body bg-light p-4">

                    <h2 class="text-center text-warning mb-4">✏️ Ürün Güncelle</h2>

                    <partial name="_ValidationSummary" />

                    <form asp-action="Edit" method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="Id" />

                        <div class="form-floating mb-3">
                            <input asp-for="Name" class="form-control" placeholder="Ad" required />
                            <label asp-for="Name">Ad</label>
                        </div>

                        <div class="form-floating mb-3">
                            <textarea asp-for="Description" class="form-control" placeholder="Açıklama" style="height: 100px;" required></textarea>
                            <label asp-for="Description">Açıklama</label>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Price" type="number" step="0.01" class="form-control" placeholder="Fiyat" required />
                            <label asp-for="Price">Fiyat (₺)</label>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="StockQuantity" type="number" class="form-control" placeholder="Stok Adedi" required />
                            <label asp-for="StockQuantity">Stok Adedi</label>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Category" class="form-control" placeholder="Kategori" required />
                            <label asp-for="Category">Kategori</label>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="DeliveryInfo" class="form-control" placeholder="Teslimat Bilgisi" required />
                            <label asp-for="DeliveryInfo">Teslimat Bilgisi</label>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-semibold">Yeni Resim Yükle</label>
                            <input type="file" name="image" class="form-control" />
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-success btn-lg rounded-pill">
                                <i class="bi bi-check-circle me-2"></i> Güncelle
                            </button>
                        </div>
                    </form>

                </div>
            </div>

        </div>
    </div>
</section>
