@model List<OrganikMarketProje.Models.Product>

<h2 class="text-center mb-4">Ürünler</h2>

@if (User.IsInRole("Admin"))
{
        <div class="text-end mb-4">
            <a asp-action="Create" class="btn btn-primary">Yeni Ürün Ekle</a>
        </div>
}

<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var item in Model)
    {
            <div class="col">
                <div class="card h-100 shadow-sm">
                @if (item.ImageData != null)
                {
                            <img src="data:@item.ImageType;base64,@Convert.ToBase64String(item.ImageData)" class="card-img-top" style="height: 200px; object-fit: cover;" />
                }
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">@item.Description</p>
                        <p class="card-text"><strong>Fiyat:</strong> @item.Price ₺</p>
                        <p class="card-text"><strong>Stok:</strong> @item.StockQuantity adet</p>
                        <p class="card-text"><strong>Kategori:</strong> @item.Category</p>
                    </div>
                @if (User.IsInRole("Admin"))
                {
                            <div class="card-footer d-flex justify-content-between">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Düzenle</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" onclick="return confirm('Silmek istediğine emin misin?')">Sil</a>
                            </div>
                }
                </div>
            </div>
    }
</div>
