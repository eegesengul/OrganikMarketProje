@model List<OrganikMarketProje.Models.Product>

<h2 class="text-center mb-4">Ürünler</h2>

@if (TempData["CartMessage"] != null)
{
        <div class="alert alert-success">@TempData["CartMessage"]</div>
}
@if (TempData["CartError"] != null)
{
        <div class="alert alert-danger">@TempData["CartError"]</div>
}
@if (TempData["ProductSearchInfo"] != null)
{
        <div class="alert alert-warning">@TempData["ProductSearchInfo"]</div>
}

@if (User.IsInRole("Admin"))
{
        <div class="text-end mb-4">
            <a asp-action="Create" class="btn btn-primary">Yeni Ürün Ekle</a>
        </div>
}

@if (Model != null && Model.Any())
{
        <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var item in Model)
        {
                    <div class="col">
                        <div class="card h-100 shadow-sm">
                    @if (item.ImageData != null)
                    {
                                    <img src="data:@item.ImageType;base64,@Convert.ToBase64String(item.ImageData)"
                                         class="card-img-top" style="height: 200px; object-fit: cover;" />
                    }
                    else
                    {
                                    <div style="height: 200px;" class="d-flex align-items-center justify-content-center bg-light text-muted">
                                        Görsel Yok
                                    </div>
                    }

                            <div class="card-body">
                                <h5 class="card-title">@item.Name</h5>
                                <p class="card-text">
                            @if (!string.IsNullOrWhiteSpace(item.Description) && item.Description.Length > 100)
                            {
                                @($"{item.Description.Substring(0, 100)}...")
                            }
                            else
                            {
                                @item.Description
                            }
                                </p>
                                <p class="card-text"><strong>Fiyat:</strong> @item.Price ₺</p>
                                <p class="card-text"><strong>Stok:</strong> @item.StockQuantity adet</p>
                                <p class="card-text"><strong>Kategori:</strong> @item.Category</p>
                            </div>

                            <div class="card-footer d-flex flex-column gap-2">
                        @if (User.IsInRole("Admin"))
                        {
                                        <div class="d-flex justify-content-between">
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Düzenle</a>
                                            <form asp-action="Delete" asp-route-id="@item.Id" method="post"
                                                  onsubmit="return confirm('Silmek istediğinize emin misiniz?');">
                                                <button type="submit" class="btn btn-sm btn-danger">Sil</button>
                                            </form>
                                        </div>
                        }

                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info mt-2">Detay</a>

                        @if (item.StockQuantity > 0)
                        {
                                        <form asp-controller="Cart" asp-action="Add" method="post" class="d-flex align-items-center mt-2">
                                            <input type="hidden" name="productId" value="@item.Id" />
                                            <input type="number" name="quantity" value="1" min="1" max="@item.StockQuantity"
                                                   class="form-control form-control-sm me-2" style="width: 70px;" />
                                            <button type="submit" class="btn btn-success btn-sm">Sepete Ekle</button>
                                        </form>
                        }
                        else
                        {
                                        <div class="text-danger mt-2">Stokta yok</div>
                        }
                            </div>
                        </div>
                    </div>
        }
        </div>
}
