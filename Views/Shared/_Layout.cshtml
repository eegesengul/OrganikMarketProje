<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OrganikMarketProje</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/OrganikMarketProje.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold fs-4" asp-controller="Home" asp-action="Index">OrganikMarketProje</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Product" asp-action="Index">Ürünler</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Recipe" asp-action="Index">Tarifler</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Cart" asp-action="Index">Sepet</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Order" asp-action="Index">Siparişlerim</a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Favorite" asp-action="MyFavorites">Favorilerim</a>
                                </li>
                        }
                    </ul>

                    <!-- Arama Kutusu Sadece İlgili Sayfalarda -->
                    @if (ViewBag.ShowProductSearch == true)
                    {
                            <form class="d-flex me-3" asp-controller="Product" asp-action="Search" method="get">
                                <input class="form-control me-2" type="search" name="query" placeholder="Ürün ara..." />
                                <button class="btn btn-outline-success" type="submit">Ara</button>
                            </form>
                    }
                    else if (ViewBag.ShowRecipeSearch == true)
                    {
                            <form class="d-flex me-3" asp-controller="Recipe" asp-action="Search" method="get">
                                <input class="form-control me-2" type="search" name="query" placeholder="Tarif ara..." />
                                <button class="btn btn-outline-primary" type="submit">Ara</button>
                            </form>
                    }

                    <ul class="navbar-nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Account" asp-action="MyProfile">Profilim</a>
                                </li>
                            @if (User.IsInRole("Admin"))
                            {
                                        <li class="nav-item dropdown">
                                            <a class="nav-link dropdown-toggle text-danger fw-bold" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                Admin Paneli
                                            </a>
                                            <ul class="dropdown-menu dropdown-menu-end">
                                                <li><a class="dropdown-item" asp-controller="AdminOrder" asp-action="Index">Sipariş Yönetimi</a></li>
                                                <li><a class="dropdown-item" asp-controller="AdminReport" asp-action="Index">Raporlar</a></li>
                                                <li><a class="dropdown-item" asp-controller="AdminReport" asp-action="DateRangeReport">Tarih Aralığı Raporu</a></li>
                                                <li><a class="dropdown-item" asp-controller="AdminUser" asp-action="UserList">Kullanıcı Yönetimi</a></li>
                                                <li><a class="dropdown-item" asp-controller="Comment" asp-action="Index">Yorum Yönetimi</a></li>
                                            </ul>
                                        </li>
                            }
                                <li class="nav-item">
                                    <span class="nav-link text-success">@User.Identity.Name</span>
                                </li>
                                <li class="nav-item">
                                    <form asp-action="Logout" asp-controller="Account" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-danger btn-sm">Çıkış Yap</button>
                                    </form>
                                </li>
                        }
                        else
                        {
                                <li class="nav-item">
                                    <a class="btn btn-success btn-sm me-2" asp-action="Login" asp-controller="Account">Giriş Yap</a>
                                </li>
                                <li class="nav-item">
                                    <a class="btn btn-primary btn-sm" asp-action="Register" asp-controller="Account">Kayıt Ol</a>
                                </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-4">
        <div class="container text-center">
            &copy; 2025 - Organik Market Projesi
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
