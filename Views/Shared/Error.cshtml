@model ErrorViewModel
@{
    ViewData["Title"] = "Hata";
}

<section class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <div class="card border-danger shadow-sm rounded-4">
                <div class="card-body p-4">

                    <h1 class="text-danger fw-bold mb-3">🚫 Bir Hata Oluştu</h1>
                    <h5 class="text-muted mb-4">İsteğiniz işlenirken bir sorun meydana geldi.</h5>

                    @if (Model.ShowRequestId)
                    {
                            <p>
                                <strong>İstek No:</strong> <code>@Model.RequestId</code>
                            </p>
                    }

                    <hr class="my-4" />

                    <h5 class="text-warning">💡 Geliştirici Modu</h5>
                    <p>
                        <strong>Development</strong> ortamına geçiş yapıldığında, oluşan hatayla ilgili daha fazla bilgi görüntülenir.
                    </p>
                    <p class="text-muted small">
                        <strong>Uyarı:</strong> Development ortamı canlı uygulamalarda etkin olmamalıdır.
                        Aksi halde istisnalarla ilgili hassas bilgiler son kullanıcıya gösterilebilir.
                        Lokal hata ayıklama için <code>ASPNETCORE_ENVIRONMENT</code> değişkenini <strong>Development</strong> olarak ayarlayın
                        ve uygulamayı yeniden başlatın.
                    </p>

                </div>
            </div>

        </div>
    </div>
</section>
