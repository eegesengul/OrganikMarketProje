@model List<OrganikMarketProje.Models.Order>

<h2>Siparişlerim</h2>

@if (TempData["OrderMessage"] != null)
{
        <div class="alert alert-success">@TempData["OrderMessage"]</div>
}

@if (!Model.Any())
{
        <p>Henüz siparişiniz bulunmamaktadır.</p>
}
else
{
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Tarih</th>
                    <th>Durum</th>
                    <th>Detay</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var order in Model)
            {
                        <tr>
                            <td>@order.Id</td>
                            <td>@order.OrderDate.ToString("dd.MM.yyyy HH:mm")</td>
                            <td>@order.Status</td>
                            <td>
                                <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-info btn-sm">Detay</a>
                            </td>
                        </tr>
            }
            </tbody>
        </table>
}
