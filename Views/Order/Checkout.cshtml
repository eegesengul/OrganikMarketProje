@model OrganikMarketProje.Models.OrderViewModel

<h2 class="text-center mb-4">Siparişi Tamamla</h2>

<partial name="_ValidationSummary" />

<form asp-action="Checkout" method="post">
    <div class="form-group">
        <label asp-for="DeliveryAddress">Teslimat Adresi</label>
        <input asp-for="DeliveryAddress" class="form-control" />
        <span asp-validation-for="DeliveryAddress" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber">Telefon Numarası</label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Note">Sipariş Notu (isteğe bağlı)</label>
        <textarea asp-for="Note" class="form-control"></textarea>
        <span asp-validation-for="Note" class="text-danger"></span>
    </div>
    <div class="text-center">
        <button type="submit" class="btn btn-success">Siparişi Tamamla</button>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
