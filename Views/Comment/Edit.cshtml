@model OrganikMarketProje.Models.Comment

@{
    ViewData["Title"] = "Yorumu Düzenle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-7 col-lg-6">

            <div class="card shadow rounded-4 border-0">
                <div class="card-body bg-light p-4">

                    <h2 class="text-danger text-center mb-4">📝 Yorumu Düzenle</h2>

                    <form asp-action="Edit" method="post">
                        <!-- Gizli alanlar -->
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="ProductId" />
                        <input type="hidden" asp-for="RecipeId" />

                        <div class="form-floating mb-3">
                            <textarea asp-for="Text" class="form-control" rows="4" placeholder="Yorum" style="height: 150px;" required></textarea>
                            <label asp-for="Text">Yorum</label>
                            <span asp-validation-for="Text" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-4">
                            <input asp-for="Rating" type="number" min="1" max="5" class="form-control" placeholder="Puan" required />
                            <label asp-for="Rating">Puan (1-5)</label>
                            <span asp-validation-for="Rating" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-success rounded-pill px-4">
                                <i class="bi bi-check-circle"></i> Kaydet
                            </button>
                            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
                                İptal
                            </a>
                        </div>
                    </form>

                </div>
            </div>

        </div>
    </div>
</section>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
