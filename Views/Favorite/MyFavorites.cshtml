@{
    ViewData["Title"] = "Favorilerim";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var favProducts = (List<OrganikMarketProje.Models.FavoriteProduct>)ViewBag.FavProducts;
    var favRecipes = (List<OrganikMarketProje.Models.FavoriteRecipe>)ViewBag.FavRecipes;
}

<section class="container py-5">
    <div class="row">
        <div class="col-lg-8 mx-auto">

            <div class="card shadow rounded-4 border-0 mb-5">
                <div class="card-body bg-light p-4">

                    <h2 class="text-danger mb-4">❤️ Favori Ürünler</h2>

                    @if (favProducts.Any())
                    {
                            <ul class="list-group list-group-flush mb-4">
                            @foreach (var item in favProducts)
                            {
                                        <li class="list-group-item d-flex justify-content-between align-items-center">
                                            <a asp-controller="Product" asp-action="Details" asp-route-id="@item.ProductId" class="text-decoration-none text-dark">
                                                <i class="bi bi-cup-hot me-2 text-danger"></i> @item.Product?.Name
                                            </a>
                                        </li>
                            }
                            </ul>
                    }
                    else
                    {
                            <div class="alert alert-warning">Favori ürününüz yok.</div>
                    }

                    <h2 class="text-warning mb-4">⭐ Favori Tarifler</h2>

                    @if (favRecipes.Any())
                    {
                            <ul class="list-group list-group-flush">
                            @foreach (var item in favRecipes)
                            {
                                        <li class="list-group-item d-flex justify-content-between align-items-center">
                                            <a asp-controller="Recipe" asp-action="Details" asp-route-id="@item.RecipeId" class="text-decoration-none text-dark">
                                                <i class="bi bi-bookmark-star me-2 text-warning"></i> @item.Recipe?.Title
                                            </a>
                                        </li>
                            }
                            </ul>
                    }
                    else
                    {
                            <div class="alert alert-warning">Favori tarifiniz yok.</div>
                    }

                </div>
            </div>

        </div>
    </div>
</section>
