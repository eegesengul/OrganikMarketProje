@model List<OrganikMarketProje.Models.CartItem>

<h2>Sepetim</h2>

@if (Model.Count == 0)
{
        <p>Sepetiniz boş.</p>
}
else
{
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Ürün</th>
                    <th>Fiyat</th>
                    <th>Miktar</th>
                    <th>Toplam</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                    <tr>
                        <td>@item.Product?.Name</td>
                        <td>@item.Product?.Price ₺</td>
                        <td>@item.Quantity</td>
                        <td>@(item.Product?.Price * item.Quantity) ₺</td>
                        <td>
                            <a asp-action="Remove" asp-route-productId="@item.ProductId" class="btn btn-danger btn-sm">Sil</a>
                        </td>
                    </tr>
            }
            </tbody>
        </table>

        <p><strong>Toplam:</strong> @Model.Sum(x => x.Product.Price * x.Quantity) ₺</p>

        <div class="d-flex gap-2">
            <a asp-action="Clear" class="btn btn-warning">Sepeti Temizle</a>

            <!-- Siparişi Tamamla Butonu -->
            <form asp-controller="Order" asp-action="Checkout" method="post">
                <button type="submit" class="btn btn-primary">Siparişi Tamamla</button>
            </form>
        </div>

    @if (TempData["OrderError"] != null)
    {
                <div class="alert alert-danger mt-3">@TempData["OrderError"]</div>
    }
}
