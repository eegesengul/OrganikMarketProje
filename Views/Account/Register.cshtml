@model OrganikMarketProje.Models.RegisterViewModel

<section class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-7 col-lg-6">
            <div class="card shadow rounded-4 border-0">
                <div class="card-body p-4 bg-light">
                    <h2 class="text-center text-warning mb-4">📝 Kayıt Ol</h2>

                    <partial name="_ValidationSummary" />

                    <form asp-action="Register" method="post">
                        <div class="form-floating mb-3">
                            <input asp-for="Name" class="form-control" placeholder="İsim" />
                            <label asp-for="Name">İsim</label>
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Surname" class="form-control" placeholder="Soyisim" />
                            <label asp-for="Surname">Soyisim</label>
                            <span asp-validation-for="Surname" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="PhoneNumber" class="form-control" placeholder="Telefon Numarası" />
                            <label asp-for="PhoneNumber">Telefon Numarası</label>
                            <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Email" class="form-control" type="email" placeholder="E-posta" />
                            <label asp-for="Email">E-posta</label>
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-4">
                            <input asp-for="Password" type="password" class="form-control" placeholder="Şifre" />
                            <label asp-for="Password">Şifre</label>
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-warning btn-lg text-white rounded-pill">
                                <i class="bi bi-person-plus me-2"></i> Kayıt Ol
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
